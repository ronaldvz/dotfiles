# Receiving options.
set imap_user = $my_user_work 
set imap_pass = $my_pw_work
set folder = $my_imap_work
set spoolfile=+INBOX

set imap_check_subscribed

# Sending options.
set smtp_url = $my_smtp_work
set ssl_starttls = yes

# Allow Mutt to open imap connection automatically
unset imap_passive

# Keep IMAP connection alive by polling
set imap_keepalive = 300

set signature = ~/.mutt/sigs/work
